<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta http-equiv="X-UA-Compatible" content="ie=edge">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
            {{ encore_entry_link_tags('app-style') }}

            <link rel="stylesheet" href="{{ asset('build/sm.css') }}" media="screen and (min-width: 600px)">
            <link rel="stylesheet" href="{{ asset('build/md.css') }}" media="screen and (min-width: 900px)">
            <link rel="stylesheet" href="{{ asset('build/lg.css') }}" media="screen and (min-width: 1200px)">
            <link rel="stylesheet" href="{{ asset('build/xl.css') }}" media="screen and (min-width: 1500px)">
            <link rel="stylesheet" href="{{ asset('build/hover.css') }}" media="screen and (hover: hover)">
        {% endblock %}
    </head>
    <body>
        <div class="alert-container contained">
            {% for type, messages in app.flashes %}
                {% for message in messages %}
                    <div class="alert alert-{{ type }}">
                        {{ message }}
                    </div>
                {% endfor %}
            {% endfor %}
        </div>

        <header class="header contained">
            <a href="{{ path('home.index') }}" class="header-brand">Chez Norbert</a>

            <button class="header-hamburger" type="button" title="menu" data-hamburger>
                <span></span>
                <span></span>
                <span></span>
            </button>

            <nav class="header-nav" data-menu="false">
                <ul class="nav-list contained">
                    <li class="nav-list-item">
                        <a href="{{ path('home.index') }}#houses" class="nav-link">Nos gîtes</a>
                    </li>
                    <li class="nav-list-item">
                        <a href="{{ path('home.index') }}#guest-houses" class="nav-link">Nos chambres d'hôtes</a>
                    </li>
                    <li class="nav-list-item">
                        <a href="{{ path('home.contact') }}" class="nav-link">Contact</a>
                    </li>

                    <li class="nav-list-item nav-list-item-spaced">
                        <a href="#" class="button-outline" data-modal-action="open" data-modal="#booking-modal">Réserver</a>
                    </li>
                </ul>
            </nav>
        </header>

        {% block body %}{% endblock %}

        <footer class="footer contained">
            <div class="footer-brand-container">
                <a href="{{ path('home.index') }}" title="Chez Norbert" class="footer-brand">
                    <img src="{{ asset('build/images/chez-norbert-logo.svg') }}" alt="Logo Chez Norbert">
                </a>
                <p class="footer-slogan">Un lieu paisible au coeur du vignoble, une maison de charme alsacienne.</p>
            </div>

            <div class="footer-nav">
                <ul class="footer-nav-list">
                    <li class="footer-nav-item">
                        <a href="{{ path('home.contact') }}" class="footer-link">Réserver</a>
                    </li>
                    <li class="footer-nav-item">
                        <a href="{{ path('home.index') }}#houses" class="footer-link">Nos gîtes</a>
                    </li>
                    <li class="footer-nav-item">
                        <a href="{{ path('home.index') }}#guest-houses" class="footer-link">Nos chambres d'hôtes</a>
                    </li>
                    <li class="footer-nav-item">
                        <a href="{{ path('home.contact') }}" class="footer-link">Contact</a>
                    </li>
                </ul>
            </div>
        </footer>

        <div id="booking-modal" class="modal-container">
            <div class="modal">

                <h3 class="modal-title">Réservez maintenant</h3>

                <div class="modal-body">
                    {{ render(controller('App\\Controller\\BookingController::index')) }}
                </div>
            </div>
        </div>

        {% block javascripts %}
            {{ encore_entry_script_tags ('app') }}
        {% endblock %}
    </body>
</html>
