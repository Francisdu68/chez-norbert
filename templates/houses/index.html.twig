{% extends 'base.html.twig' %}

{% block title %}Hello HousesController!{% endblock %}

{% block body %}
    <header class="contained house-header">
        <span class="overline">Gîte</span>
        <h1 class="title-1 house-title">Le "{{ house.name }}"</h1>
    </header>

    <div class="house-content-wrapper">
        <section class="carousel-container">
            <div class="glide">
                <div class="glide__track" data-glide-el="track">
                    <ul class="glide__slides">
                        <li class="glide__slide">
                            <div class="carousel-img-wrapper">
                                <img src="{{ asset('build/images/gite-example.jpg') }}" class="carousel-img">
                            </div>
                        </li>
