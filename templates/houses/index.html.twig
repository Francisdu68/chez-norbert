{% extends 'base.html.twig' %}

{% block title %}Hello HousesController!{% endblock %}

{% block body %}
    <header class="contained house-header">
        <span class="overline">{{ house.type }}</span>
        <h1 class="title-1 house-title">Le "{{ house.name }}"</h1>
    </header>

    <div class="house-content-wrapper">
        <section class="carousel-container">
            <div class="glide">
                <div class="glide__track" data-glide-el="track">
                    <ul class="glide__slides">
                        <li class="glide__slide">
                            <div class="carousel-img-wrapper">
                                <img src="{{ asset('build/images/gite-example.jpg') }}" class="carousel-img">
                            </div>
                        </li>
                        <li class="glide__slide">
                            <div class="carousel-img-wrapper">
                                <img src="{{ asset('build/images/gite-example.jpg') }}" class="carousel-img">
                            </div>
                        </li>
                        <li class="glide__slide">
                            <div class="carousel-img-wrapper">
                                <img src="{{ asset('build/images/gite-example.jpg') }}" class="carousel-img">
                            </div>
                        </li>
                    </ul>
                </div>

                <div class="glide__bullets" data-glide-el="controls[nav]">
                    <button class="glide__bullet" data-glide-dir="<">&lt;</button>
                    <button class="glide__bullet" data-glide-dir=">">&gt;</button>
                </div>
            </div>
        </section>

        <div class="contained detail-contained">
            <section class="details">
                <h2 class="details-title">Détails</h2>
                <ul class="details-list">
                    {% for advantage in house.advantage %}
                        <li class="details-element">{{ advantage }}</li>
                    {% endfor %}
{#                    <li class="details-element">4 - 6 personnes</li>#}
{#                    <li class="details-element">Sain de balle privative</li>#}
{#                    <li class="details-element">Duplex</li>#}
                </ul>
                <p>
                    {{ house.description }}
                </p>

                <div>
                    <a href="#" class="button details-button">Réservez maintenant</a>
                </div>
            </section>
        </div>
    </div>

    <div class="contained contained-y background-light">
        <header class="other-houses-header">
            <h2 class="title-1 other-houses-title">
                Autre
                {% if house.type == "Chambre d'hote" %}
                    gîte
                {% else %}
                    chambre d'hôte
                {% endif %}
            </h2>
        </header>

        <section class="other-houses-body">
            <article class="other-house">


                <img src="{{ asset('build/images/gite-example.jpg') }}" class="other-house-img">

                <div class="other-house-body">
                    <span class="overline">Gîte suivant</span>
                    <h3 class="other-house-title">Le "{{ anotherHouse.name }}"</h3>
                    <p class="other-house-text">{{ anotherHouse.description }}</p>

                    <a href="#" class="other-house-button">En savoir plus</a>
                </div>
            </article>
        </section>
    </div>


    <div class="contained contained-y">
        <header class="other-houses-header">
            <h2 class="title-1 other-houses-title">
                Les
                {% if house.type == "Chambre d'hote" %}
                    gîtes
                {% else %}
                    chambres d'hôte
                {% endif %}
            </h2>
        </header>

        <section class="other-houses-body">
            {% for house in oppositeTypeHouses %}
                <article class="other-house">

                    <img src="{{ asset('build/images/gite-example.jpg') }}" class="other-house-img">

                    <div class="other-house-body">
                        <h3 class="other-house-title">{{ house.type }} "{{ house.name }}"</h3>
                        <p class="other-house-text">{{ house.description }}</p>
                        <p>{{ house.advantage | join (' - ') }}</p>

                        <a href="#" class="other-house-button">En savoir plus</a>
                    </div>
                </article>
            {% endfor %}
        </section>
    </div>
{% endblock %}
